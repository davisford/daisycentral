!!! 5
html(lang="en")
  head
    != SocketStream
    meta(charset="utf-8")
    title Daisy Central Login
    meta(name="viewport", content="width=device-width,initial-scale=1.0")
    meta(name="description", content="TODO")
    meta(name="author", content="DaisyWorks,Inc.")

    // if lt IE 9
      script(src="http://html5shim.googlecode.com/svn/trunk/html5.js")

    link(rel="shortcut icon", href="ico/favicon.ico")
    link(rel="apple-touch-icon-precomposed", sizes="114x114", href="ico/apple-touch-icon-114-precomposed.png")
    link(rel="apple-touch-icon-precomposed", sizes="72x72", href="ico/apple-touch-icon-72-precomposed.png")
    link(rel="apple-touch-icon-precomposed", href="ico/apple-touch-icon-57-precomposed.png")

  body
    div.navbar.navbar-fixed-top
    div.container-fluid
      div.row-fluid    
          div.hero-unit
            img#login_logo(src="/images/dw-logo2.png", alt="DaisyWorks Logo", width=197, height=128)
            h1 Daisy Central
            div.well.login-panel
              ul.nav.nav-tabs#tabs(data-tabs="tabs")
                li.active
                  a(href="#loginTab", data-toggle="tab") Login
                li
                  a(href="#registerTab", data-toggle="tab") Register 
              div.tab-content#myTabContent
                div.alert.alert-error(style="display:none;")
                  a.close(data-dismiss="alert") &times;
                  p#err This is an error
                div.tab-pane.active#loginTab
                  form.form-inline#loginForm
                    input.input-small#login-email(type="text", placeholder="email", name="email")
                    input.input-small#login-pass(type="password", placeholder="password", name="password")
                    button.btn.btn-primary#login-submit(type="submit") Login
                    hr
                    div.btn-group
                      a.btn.btn-large#twit(href="/auth/twitter") Login with Twitter  
                      a.btn.btn-large#fb(href="/auth/facebook") Login with Facebook
                      a.btn.btn-large#goog(href="/auth/google") Login with Google
                div.tab-pane#registerTab(action="/register", method="post")
                  form.form-inline#registerForm
                    input.input-small#reg-email(type="text", placeholder="email", name="email")
                    input.input-small#reg-pass1(type="password", placeholder="password", name="password")
                    input.input-small#reg-pass2(type="password", placeholder="verify password", name="password")
                    button.btn.btn-primary#register-submit(type="submit") Sign Up

              


    

